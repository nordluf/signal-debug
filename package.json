{
  "name": "signal-debug",
  "version": "0.0.0-development",
  "description": "Start customisable debug output on USR2 signal.",
  "main": "index.js",
  "scripts": {
    "test": "DEBUG_COLORS=no mocha",
    "test:coverage": "DEBUG_COLORS=no istanbul cover _mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "lint": "semistandard",
    "precommit": "npm test && npm run lint",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordluf/signal-debug.git"
  },
  "keywords": [
    "debug",
    "logging"
  ],
  "author": "Evgeny Kruglov",
  "license": "JSON",
  "bugs": {
    "url": "https://github.com/nordluf/signal-debug/issues"
  },
  "engines": {
    "node": ">= 4.8.0",
    "npm": ">= 2.14.0"
  },
  "homepage": "https://github.com/nordluf/signal-debug#readme",
  "devDependencies": {
    "codacy-coverage": "^2.1.1",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "semantic-release": "^8.2.3",
    "semistandard": "^11.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "semistandard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "it"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0"
  }
}
