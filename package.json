{
  "name": "signal-debug",
  "version": "1.0.0",
  "description": "Start customisable debug output on USR2 signal.",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run build && DEBUG_COLORS=no mocha",
    "lint": "standardx './src/**/*.ts' './test/**/*.ts'",
    "releaseit": "release-it --ci",
    "pre-commit": "npm test && npm run lint && npm audit --prod",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm run pre-commit"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordluf/signal-debug.git"
  },
  "keywords": [
    "debug",
    "logging"
  ],
  "author": "Evgeny Kruglov",
  "license": "JSON",
  "bugs": {
    "url": "https://github.com/nordluf/signal-debug/issues"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 6.0.0"
  },
  "homepage": "https://github.com/nordluf/signal-debug#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@release-it/bumper": "^1.1.1",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/debug": "^4.1.5",
    "@types/node": "^12.12.47",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "mocha": "^7.0.0",
    "release-it": "^13.0.0",
    "standardx": "^5.0.0",
    "typescript": "^3.9.5"
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "debug": "^4.0.0"
  },
  "files": [
    "dist/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
